<!--pages/writing/writingClouse/writingClouse.wxml-->
<view>
  <block wx:for="{{fields}}" wx:key="field">
    <view class="weui-cells__title">{{item.field}}</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__bd">
          <input wx:if="{{item.type == 'input'}}" class="weui-input" placeholder="{{item.default}}"
            data-field="{{item.innerfield}}" bindinput="input" />
          <mline wx:if="{{item.type == 'textarea'}}" placeholder="{{item.default}}" data-field="{{item.innerfield}}"
            bindinput="input" maxlength="200"></mline>
        </view>
      </view>
    </view>
  </block>
</view>
<view class="weui-btn-area">
  <button class="weui-btn" type="primary" bindtap="showTopTips">确定上传</button>
</view>